<div class="body" style="height: 75vh;">
    <h2>Add A New Book:</h2>
    <form action="/create" method="POST">
        <h3>Title: </h3>
        <input type="text"
        name="title"
        size="50%"
        required="required" />

        <h3>Author: </h3>
        <input type="text"
        name="author"
        size="50%"
        required="required" />

        <h3>Publisher: </h3>
        <input type="text"
        name="publisher"
        size="50%" />
        <br>
        <br>
        <button type="submit">Create</button>
    </form>
</div>